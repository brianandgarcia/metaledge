/* TAB BAR */
.acpFormTabBar {
	background: #4e5b62;
}

	.ipsTabs_item { position: relative; }

	.acpFormTabBar .ipsTabs_item:not( .ipsTabs_activeItem ) {
		color: #fff;
		background: rgba(255,255,255,0.2);
	}

	.acpFormTabBar .ipsTabs_activeItem {
		background: #f9f9f9;
		font-weight: normal;
	}

.acpFormTabContent {
	border: 10px solid #f9f9f9;
}

.acpFormTabContent .ipsToolList {
	background: #f9f9f9;
	padding-bottom: 10px;
	margin: 0;
}

.ipsApp_admin .ipsTabs_activeItem {
	border-top: 0;
}

.ipsApp_admin .ipsTabs_item {
	border-top: 1px solid #4e5b62;
}
html[dir="ltr"] .ipsApp_admin .ipsTabs_item {
	border-right: 1px solid #4e5b62;
}
html[dir="rtl"] .ipsApp_admin .ipsTabs_item {
	border-left: 1px solid #4e5b62;
}